<?xml version="1.0"?>
<parameters>
    <!-- Configuração básica do banco de dados -->
    <dbtype>POSTGRES</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:5432/benchio</DBUrl>
    <username>postgres</username>
    <password>password</password>
    <isolation>TRANSACTION_READ_COMMITTED</isolation>
    <scalefactor>1.0</scalefactor>
    <batchsize>1000</batchsize>
    <ddl>create</ddl> <!-- Adicionado: para criar as tabelas via DDL -->

    <!-- Configurações específicas do BenchIO -->
    <hubs>10</hubs>
    <rooms_per_hub>5</rooms_per_hub>
    <devices_per_room>3</devices_per_room>
    <sensors_per_device>2</sensors_per_device>
    <users>50</users>
    <automation_profiles>100</automation_profiles>
    <initial_sensor_logs>20</initial_sensor_logs>
    <initial_action_logs>10</initial_action_logs>

    <!-- Configuração de execução -->
    <terminals>20</terminals>
    <rate>unlimited</rate>
    <warmup>30</warmup>
    <duration>120</duration>

    <!-- Perfil de carga de trabalho -->
    <works>
        <work>
            <time>120</time>
            <rate>unlimited</rate>
            <weights>40,25,15,10,5,5</weights>
        </work>
    </works>

    <!-- Definição dos tipos de transação -->
    <transactiontypes>
        <transactiontype>
            <name>ReadSensorData</name>
            <id>1</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>50</postExecutionWait>
        </transactiontype>
        <transactiontype>
            <name>InsertSensorReading</name>
            <id>2</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>30</postExecutionWait>
        </transactiontype>
        <transactiontype>
            <name>CheckDeviceStatus</name>
            <id>3</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>100</postExecutionWait>
        </transactiontype>
        <transactiontype>
            <name>TriggerAutomation</name>
            <id>4</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>150</postExecutionWait>
        </transactiontype>
        <transactiontype>
            <name>RegisterNewDevice</name>
            <id>5</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>200</postExecutionWait>
        </transactiontype>
        <transactiontype>
            <name>GenerateAlert</name>
            <id>6</id>
            <preExecutionWait>0</preExecutionWait>
            <postExecutionWait>100</postExecutionWait>
        </transactiontype>
    </transactiontypes>

    <!-- Configurações avançadas -->
    <advanced>
        <samples>10000</samples>
        <interval>1</interval>
        <latency>true</latency>
    </advanced>
</parameters>
