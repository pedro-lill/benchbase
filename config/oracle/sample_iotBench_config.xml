<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>ORACLE</type>
    <driver>oracle.jdbc.OracleDriver</driver>
    <url>jdbc:oracle:thin:@localhost:1521/xepdb1</url>
    <username>benchbase</username>
    <password>password</password>
    <reconnectOnConnectionFailure>true</reconnectOnConnectionFailure>
    <!-- TRANSACTION_SERIALIZABLE -->
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>1000</batchsize>

    <!-- Scalefactor in IotBench is *1000 the number of rows in the USERTABLE-->
    <scalefactor>1</scalefactor>

    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
            <time>120</time>
            <rate>10000</rate>
            <weights>50,5,15,10,10,10</weights>
        </work>
    </works>



    <!-- IotBench Procedures declaration pedro -->
    <transactiontypes>
        <transactiontype>
            <name>InsertSensorLogRecord</name>
        </transactiontype>
        <transactiontype>
            <name>InsertActionLogRecord</name>
        </transactiontype>
        <transactiontype>
            <name>InsertUserRecord</name>
        </transactiontype>
        <transactiontype>
            <name>GetActiveSensorsPerRoom </name>
        </transactiontype>
        <transactiontype>
            <name>GetSensorsAndDevicesFromRoom</name>
        </transactiontype>
        <transactiontype>
            <name>InsertSensorRecord</name>
        </transactiontype>
    </transactiontypes>
</parameters>
